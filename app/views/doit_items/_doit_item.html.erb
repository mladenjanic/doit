
<div class="row clearfix">
    <% if doit_item.completed? %>
        <div class="complete">
           <%= link_to 'Mark as Complete', complete_doit_list_doit_item_path(@doit_list, doit_item.id), method: :patch %> 
        </div>
        <div class="todo_item">
            <p style="opacity: 0.4"><strike><%= doit_item.content %></strike></p>
        </div>
        <div class="trash">
            <%= link_to 'Delete', doit_list_doit_item_path(@doit_list, doit_item.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    <% else %>
        <div class="complete">
           <%= link_to 'Mark as Complete', complete_doit_list_doit_item_path(@doit_list, doit_item.id), method: :patch %> 
        </div>
        <div class="todo_item">
            <p><%= doit_item.content %></p>
        </div>
        <div class="trash">
            <%= link_to 'Delete', doit_list_doit_item_path(@doit_list, doit_item.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    <% end %>
        
</div>