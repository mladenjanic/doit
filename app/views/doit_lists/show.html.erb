<p id="notice"><%= notice %></p>

<h2 class="todo_list_title"><%= @doit_list.title %></h2>
<p class="todo_list_sub_title"><%= @doit_list.description %></p>


<div id="todo_items_wrapper">
    <%= render @doit_list.doit_items %>
    <div id="form">
        <%= render "doit_items/form" %>
    </div>
</div>

<div class="links">
    <%= link_to 'Edit', edit_doit_list_path(@doit_list) %> |
    <%= link_to 'Delete', doit_list_path(@doit_list), method: :delete, data: { confirm: 'Are you sure?' } %> |
    <%= link_to 'Back', doit_lists_path %>
</div>
